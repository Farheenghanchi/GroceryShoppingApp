<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/ll_root"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:id="@+id/ll_amount_to_pay"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/colorAccent"
                >
                <TextView
                    android:id="@+id/tv_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    tools:text="250"
                    android:text="250"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/tv_amount_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_amount"
                    android:layout_centerHorizontal="true"
                    tools:text="Amount to pay"
                    android:text="Amount to pay"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="15sp"
                    />
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/ll_card_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_horizontal_margin"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/iv_card"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_action_card"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    />
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_card_num"
                    android:theme="@style/fragmentDetailsETstyle"
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_height="wrap_content">
                    <EditText
                        android:imeOptions="actionNext"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:maxLength="16"
                        android:textColor="@color/colorBlack"
                        android:id="@+id/input_card_num"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:hint="Card Number" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_card_detial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_horizontal_margin"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/tv_null"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:gravity="center"
                    tools:text="text"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    />
                <LinearLayout
                    android:id="@+id/ll_card_detial_in"
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_card_exp"
                        android:theme="@style/fragmentDetailsETstyle"
                        android:layout_width="0dp"
                        android:layout_weight="10"
                        android:layout_height="wrap_content">
                        <EditText
                            android:imeOptions="actionNext"
                            android:singleLine="true"
                            android:maxLines="1"
                            android:maxLength="7"
                            android:textColor="@color/colorBlack"
                            android:id="@+id/input_card_exp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="date"
                            android:hint="Exp Date" />
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_card_cvc"
                        android:theme="@style/fragmentDetailsETstyle"
                        android:layout_width="0dp"
                        android:layout_weight="10"
                        android:layout_height="wrap_content">
                        <EditText
                            android:imeOptions="actionNext"
                            android:singleLine="true"
                            android:maxLines="1"
                            android:maxLength="3"
                            android:textColor="@color/colorBlack"
                            android:id="@+id/input_card_cvc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:hint="CVC" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_card_pin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_horizontal_margin"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/iv_card_pin"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_action_pin"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    />
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_card_pin"
                    android:theme="@style/fragmentDetailsETstyle"
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_height="wrap_content">
                    <EditText
                        android:imeOptions="actionDone"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:maxLength="6"
                        android:textColor="@color/colorBlack"
                        android:id="@+id/input_card_pin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:hint="Postal Code" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>


            <Button
                android:id="@+id/btn_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Make Payment"
                android:textColor="@color/colorWhite"
                android:background="@color/colorPrimary"
                android:layout_gravity="center_horizontal"
                android:padding="5dp"
                android:layout_margin="15dp"/>
        </LinearLayout>
    </ScrollView>


</LinearLayout>